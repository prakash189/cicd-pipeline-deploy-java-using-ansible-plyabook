#!groovy
pipeline {
  agent any
  stages {
        stage('checkout') {
            steps {

                git branch: 'main', url: 'https://github.com/prakash189/cicd-pipeline-deploy-java-using-ansible-plyabook.git'

                  }
              }
        

        stage('run ansible playbook to install the nexus,sonarquebe and tomcat') 
            {
            steps {

                sh "ansible-playbook main.yml -i hosts"
            }
        }

    }
}